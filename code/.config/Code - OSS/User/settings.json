// Please do NOT use a code formatter/prettier on this file.
// The formatter will  move all the keybindings to separate lines, making the config hard to read
{
	// Theming
	"editor.fontFamily": "'FuraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Gruvbox Dark Medium",
	// Personal defaults
	"editor.tabSize": 2,
	"editor.fontLigatures": true,
	"editor.lineNumbers": "relative",
	"editor.fontSize": 15,
	"window.menuBarVisibility": "default",
	"window.zoomLevel": 1,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"editor.renderWhitespace": "boundary",
	"workbench.activityBar.visible": true,
	// Go
	"go.useLanguageServer": true,
	"go.formatTool": "goimports",
	// Enable Neovim
	"vim.enableNeovim": true,
	"vim.neovimPath": "/usr/bin/nvim",
	// Rust
	"rust-client.engine": "rust-analyzer",
	// Vim
	"vim.leader": "<space>",
	"vim.visualModeKeyBindings": [
		{"before": [ "<leader>","<space>" ], "commands": [ "workbench.action.showCommands" ] },
	],
	"vim.normalModeKeyBindings": [
		// File
		{"before": [ "<leader>","<space>" ], "commands": [ "workbench.action.showCommands" ] },
		{"before": [ "<leader>","." ], "commands": [ "workbench.action.quickOpen" ] },
		{"before": [ "<leader>","f","o" ], "commands": [ "workbench.action.files.openFile" ] },
		{"before": [ "<leader>","f","O" ], "commands": [ "workbench.action.files.openFolder" ] },
		{"before": [ "<leader>","f","r" ], "commands": [ "workbench.action.openRecent" ] },
		{"before": [ "<leader>","f","s" ], "commands": [ "workbench.action.files.save" ] },
		{"before": [ "<leader>","f","y" ], "commands": [ "copyFilePath" ] },
		{"before": [ "<leader>","f","q" ], "commands": [ "workbench.action.closeWindow" ] },
		// Sidebar
		{"before": [ "<leader>","e" ], "commands": [ "workbench.view.explorer" ] },
		{"before": [ "<leader>","g" ], "commands": [ "workbench.view.scm" ] },
		{"before": [ "<leader>","d" ], "commands": [ "workbench.view.debug" ] },
		{"before": [ "<leader>","x" ], "commands": [ "workbench.view.extensions" ] },
		// Terminal
		{"before": [ "<leader>","t","f" ], "commands": [ "workbench.action.terminal.focus" ] }, // C-` to hide when in terminal view
		// VsCode Session
		{"before": [ "<leader>","q","q" ], "commands": [ "workbench.action.closeWindow" ] },
		{"before": [ "<leader>","q","r" ], "commands": [ "workbench.action.reloadWindow" ] },
		{"before": [ "<leader>","q","f" ], "commands": [ "workbench.action.toggleFullScreen" ] },
		{"before": [ "<leader>","q","a" ], "commands": [ "workbench.action.toggleActivityBarVisibility" ] },
		{"before": [ "<leader>","q","t" ], "commands": [ "workbench.action.selectTheme" ] },
		// Editor actions (built-in: gd, gD)
		{"before": [ "<leader>",";" ], "commands": [ "editor.action.commentLine" ] },
		{"before": [ "<leader>","f","f" ], "commands": [ "editor.action.format" ] },
		// Editor windows
		//   CTRL-{1-9} to toggle editors
		{"before": [ "<leader>","w","s" ], "commands": [ "workbench.action.splitEditorDown" ] },
		{"before": [ "<leader>","w","v" ], "commands": [ "workbench.action.splitEditorRight" ] },
		{"before": [ "<leader>","b","t" ], "commands": [ "bookmarks.toggle" ]},
		{"before": [ "<leader>","b","l" ], "commands": [ "bookmarks.list" ]},
		{"before": [ "<leader>","b","b" ], "commands": [ "bookmarks.jumpToNext" ]},
		{"before": [ "<leader>","b","B" ], "commands": [ "bookmarks.jumpToPrevious" ]},
	],
	"vim.insertModeKeyBindings": [
		// jk as escape
		{ "before": [ "j", "k"], "after": [ "<Esc>" ] }
	],
	"vim.easymotion": true,
	"vim.useSystemClipboard": true,
	"latex-workshop.view.pdf.viewer": "tab"
}